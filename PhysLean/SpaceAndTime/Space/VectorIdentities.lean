lemma div_of_curl_eq_zero (f : Space ‚Üí EuclideanSpace ‚Ñù (Fin 3)) (hf : ContDiff ‚Ñù 2 f) :
    ‚àá ‚¨ù (‚àá √ó f) = 0 := by
  unfold div curl Finset.sum coord basis
