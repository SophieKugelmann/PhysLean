    Fin.succ_zero_eq_one, Fin.succ_one_eq_two, List.ofFn_zero, Multiset.sum_coe, List.sum_cons,
    List.sum_nil, add_zero]
  repeat rw [deriv_coord_add]
  simp only [Fin.isValue, Pi.add_apply]
